<body class="cbp-spmenu-push">
	<div class="main-content">
	<div class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
		<!-- side bar -->
		<%- include('sidebar'); -%>
		
		<!-- header-starts -->
		<%- include('header'); -%>
		<!-- //header-ends -->
		<!-- main content start-->
		<div id="page-wrapper">
			<div class="main-page">
				<h2 class="title1">Controls</h2>
				<div class="forms">
					<div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
						<div class="form-body">
								<div class="form-body">
									<form method="POST", action="/">
										<label>Slider status</label><br>
										<select class="selectpicker" data-style="btn-info" name="selectpicker">
											<optgroup label="Select Table">
												<option value="show">Show</option>
												<option value="">Hide</option>
											</optgroup>
										</select>
										<input type="submit" value="Save" />
									</form>
								</div>
							</div>
						</div>
					</div>
					<h2 class="title1">Edit terms & conditions</h2>
					<div class="forms">
						<div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
							<div class="form-body">
									<div class="form-body">
										<form method="GET", action="/getTerms">
											<input type="submit" value="Edit" />
										</form>
									</div>
								</div>
							</div>
				</div>
				<table class="table">
					<thead>
						<tr>
							<th>
								Sr.#
							</th>
							<th>
								Terms and Conditions
							</th>
							<th>
								Date & Time
							</th>
							<th>
								Action
							</th>
						</tr>
					</thead>
					<% myposts.forEach(function(row, index){%>
					<tr>
						<td><%= index+1 %></td>
						<td><%=row.dateandtime %></td>
						<td>
							<a href="/show/<%=row._id %>">Show | </a>
							<a href="/editposts/<%=row._id %>">Edit | </a>
						   <a href="/deletepost/<%=row._id %>">Delete</a> 
						</td>
					</tr>
					<%}) %>
				</table>
		
	<div class="forms">
		<h2 class="title1">NewsLetters</h2>
		<div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
			<div class="form-body">
				<form method="POST", action="/addnewsletter"> 
					<div class="form-group"> <label for="InputText">Post a news</label> <input type="text" name="newsletter" class="form-control" id="InputText" placeholder="news letter"> </div> 
					<button type="submit"  class="btn btn-default">Post</button> </form> 
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Sr.#
					</th>
					<th>
						Newsletter
					</th>
					<th>
						Date & Time
					</th>
					<th>
						Action
					</th>
				</tr>
			</thead>
			<% myposts.forEach(function(row, index){%>
			<tr>
				<td><%= index+1 %></td>
				<td><%=row.newsletter %></td>
				<td><%=row.dateandtime %></td>
				<td>
					<a href="/show/<%=row._id %>">Show | </a>
					<a href="/editposts/<%=row._id %>">Edit | </a>
				   <a href="/deletepost/<%=row._id %>">Delete</a> 
				</td>
			</tr>
			<%}) %>
		</table>
		
		
		
		
